{
  "apiKey": 77,
  "type": "request",
  "listeners": ["zkBroker", "broker"],
  "name": "StreamsInitializeRequest",
  "validVersions": "0",
  "flexibleVersions": "0+",
  "fields": [
    { "name": "GroupId", "type": "string", "versions": "0+", "entityType": "groupId",
      "about": "The group identifier." },
    { "name": "TopologyVersion", "type": "bool", "versions": "0+",
      "about": "The version of the topology information that is being sent here. Null to disable topology versioning."
    },
    // TODO: We should allow sending only a topology hash, to check if the topology has changed.
    // TODO: We could define the whole graph of the topology here, but not sure if it's worth it.
    // TODO: We may want to have something like a topology epoch, to avoid that old clients downgrade the topology after an upgrade.
    { "name":  "Topology", "type": "[]Subtopology", "versions": "0+",
      "about": "The sub-topologies of the streams application.",
      "fields": [
        { "name": "Name", "type": "string", "versions": "0+",
          "about": "" },
        { "name": "Partitions", "type": "int32", "versions": "0+",
          "about": "" },
        { "name": "SourceTopics", "type": "[]string", "versions": "0+",
          "about": "" },
        { "name": "SinkTopics", "type": "[]string", "versions": "0+",
          "about": "" },
        { "name": "StateChangelogTopics", "type": "[]string", "versions": "0+",
          "about": "" },
        { "name": "RepartitionSourceTopics", "type": "[]string", "versions": "0+",
          "about": "The set of source topics that are internally created repartition topics. Created automatically." }
      ]
    }
  ]
}
